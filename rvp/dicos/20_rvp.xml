<?xml version="1.0" encoding="utf-8"?>

<creole>
    <files>
        <file filelist='rvp' name='/etc/strongswan.conf' />
        <file filelist='rvp' name='/etc/ipsec.conf' />
        <file filelist='rvp' name='/etc/ipsec.d/ipsec_updown' />
        <file filelist='rvp' name='/usr/share/eole/test-rvp_more_ip' mode='755' />
    </files>
    <variables>
        <family name='services'>
            <variable name='install_rvp' type='oui/non' description='Activer le réseau privé virtuel RVP' >
                <value>non</value>
            </variable>
        </family>
        <family name='rvp'>
            <variable name='adresse_network_zone_rvp' type='ip' description='Adresse réseau de la zone RVP' multi='True' />
            <variable name='adresse_netmask_zone_rvp' type='netmask' description='Masque de sous-réseau de la zone RVP' />
            <variable name='autoriser_rvp_autres' type='oui/non' description="Autoriser d'autres zones que eth1 à accéder à ce réseau">
                <value>non</value>
            </variable>
            <variable name='ip_test_rvp' type='ip' description='Adresses IP à tester dans test-rvp' multi='True' />
            <variable name='agriates_member' type='oui/non' description='Serveur membre du réseau AGRIATES' >
                <value>non</value>
            </variable>
        </family>
        <separators>
            <!--<separator name='install_rvp'>Réseau Virtuel Privé (RVP)</separator>-->
            <separator name='adresse_network_zone_rvp'>Accès RVP par le proxy</separator>
            <separator name='ip_test_rvp'>Liste d'adresses IP pour le contrôle des tunnels</separator>
            <separator name='agriates_member'>AGRIATES</separator>
        </separators>
    </variables>
    <constraints>
        <condition name='hidden_if_in' source='install_rvp'>
            <param>non</param>
            <target type='family'>rvp</target>
            <target type='filelist'>rvp</target>
        </condition>
        <group master='adresse_network_zone_rvp'>
            <slave>adresse_netmask_zone_rvp</slave>
            <slave>autoriser_rvp_autres</slave>
        </group>
    </constraints>
    <help/>
</creole>
