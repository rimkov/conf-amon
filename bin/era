# Mode SSH
if [ -n "$SSH_CLIENT" ] 
then
	if [ -z "$DISPLAY" ]
	then
		    echo "Pas de variable DISPLAY"
		    exit
	fi
	/usr/share/era/era.sh 
	exit
fi

# Mode console
TMPF=$(mktemp -p /tmp)
/bin/echo -e "/usr/bin/numlockx;\n/usr/share/era/era.sh" >$TMPF
chmod a+x $TMPF
xinit $TMPF >/dev/null 2>&1
rm $TMPF
