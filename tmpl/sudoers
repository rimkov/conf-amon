GRPADM ALL=NOPASSWD : /usr/bin/Maj-Auto
GRPADM ALL=NOPASSWD : /usr/sbin/fping
GRPADM ALL=NOPASSWD : /usr/bin/reconfigure
GRPADM ALL=NOPASSWD : /sbin/halt
GRPADM ALL=NOPASSWD : /sbin/reboot
GRPADM ALL=NOPASSWD : /usr/share/eole/test-rvp
GRPADM ALL=NOPASSWD : /usr/share/eole/Maj-blacklist.sh
GRPADM ALL=NOPASSWD : /usr/bin/Query-Auto

# outils zephir
uucp	ALL=NOPASSWD :  /usr/share/zephir/scripts/*.zephir

