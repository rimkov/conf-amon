# Host alias specification

# User alias specification
User_Alias	GRPADM = %%auto_module, amon2 
# Cmnd alias specification
# User privilege specification
root	ALL=(ALL) ALL

# interface semi-graphique & MAJ
GRPADM ALL=NOPASSWD : /usr/bin/diagnose
