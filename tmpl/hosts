127.0.0.1		localhost.localdomain localhost
%%adresse_ip_eth0		%%nom_machine.%%nom_domaine_local %%nom_machine
%%adresse_ip_eth1		%%nom_machine_eth1.%%nom_domaine_local %%nom_machine_eth1
%if %%nom_domaine_local_supp != ['']
%for %%domaines in %%nom_domaine_local_supp
%%adresse_ip_eth0		%%nom_machine.%%domaines 
%%adresse_ip_eth1		%%nom_machine_eth1.%%domaines 
%end for
%end if
%if %%nombre_interfaces >= "3" 
