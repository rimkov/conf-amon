# Configuration pour envole
%def pop_http(url)
    %if url.startswith('http://')
        %return url[7:].split('/')[0]
    %end if
    %if url.startswith('https://')
        %return url[8:].split('/')[0]
    %end if
%end def
%if %%is_defined('activer_revprox') and %%activer_revprox == 'oui'
%set %%buffer=[]
%for %%proxied in %%revprox_domainname
%if %%proxied.value not in %%buffer and %%proxied.value and %%proxied.revprox_url
%%pop_http(%%proxied.revprox_url)                %%proxied.value
%%buffer.append(%%proxied.value)%slurp
%end if
%end for
%end if
